{
  "name": "remark-emoji-to-gemoji",
  "version": "1.0.0",
  "description": "Transform emoji unicodes into gemoji shortcodes",
  "license": "MIT",
  "keywords": [
    "emoji",
    "gemoji",
    "to"
  ],
  "dependencies": {
    "escape-string-regexp": "^1.0.5",
    "gemoji": "^4.0.0",
    "unist-util-visit": "^1.0.0"
  },
  "repository": "jackycute/remark-emoji-to-gemoji",
  "author": "jackycute",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^14.0.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.4.0",
    "remark": "^7.0.0",
    "remark-cli": "^3.0.0",
    "remark-preset-wooorm": "^2.0.0",
    "tape": "^4.0.0",
    "xo": "^0.17.1"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-bundle": "browserify index.js --no-builtins -s emojiToGemoji > remark-emoji-to-gemoji.js",
    "build-mangle": "esmangle remark-emoji-to-gemoji.js > remark-emoji-to-gemoji.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "istanbul cover test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "rules": {
      "guard-for-in": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
