{
  "name": "remark-emoji-to-gemoji",
  "version": "1.0.0",
  "description": "Transform emoji unicodes into gemoji shortcodes",
  "license": "MIT",
  "keywords": [
    "emoji",
    "gemoji",
    "to"
  ],
  "dependencies": {
    "escape-string-regexp": "^1.0.5",
    "gemoji": "^4.0.0",
    "unist-util-visit": "^1.0.0"
  },
  "repository": "jackycute/remark-emoji-to-gemoji",
  "author": "jackycute",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^14.0.0",
    "eslint": "^3.16.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.4.0",
    "remark": "^7.0.0",
    "remark-cli": "^3.0.0",
    "remark-comment-config": "^5.0.0",
    "remark-github": "^7.0.0",
    "remark-preset-lint-consistent": "^2.0.0",
    "remark-preset-lint-recommended": "^2.0.0",
    "remark-slug": "^4.2.0",
    "remark-usage": "^5.0.0",
    "remark-validate-links": "^6.0.0",
    "tape": "^4.0.0"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-bundle": "browserify index.js --no-builtins -s emojiToGemoji > remark-emoji-to-gemoji.js",
    "build-mangle": "esmangle remark-emoji-to-gemoji.js > remark-emoji-to-gemoji.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "eslint .",
    "test-api": "node test.js",
    "test-coverage": "istanbul cover test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  }
}
